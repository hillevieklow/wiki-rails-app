<%= form_for article, url: {action: form_action, params: {id: article.id}} do |f|%>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :category %>
  <%= f.text_field  :new_category, placeholder: "New Category" %>
  <%= f.collection_select :category_id, Category.all, :id, :name %>
  <%= f.text_area :content%>
  <%= f.submit 'Create Article'%>
<% end %>

